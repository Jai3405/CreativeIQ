# CreativeIQ Production Environment Configuration
# IMPORTANT: Update all passwords and secrets before deployment

# Application Settings
ENV=production
APP_NAME=CreativeIQ
VERSION=1.0.0
API_V1_STR=/api/v1
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_TO_SECURE_RANDOM_KEY

# Security
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Database Configuration
POSTGRES_SERVER=postgres
POSTGRES_USER=creativeiq_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=creativeiq_prod
POSTGRES_PORT=5432

# MongoDB Configuration
MONGODB_URL=mongodb://admin:CHANGE_MONGO_PASSWORD@mongo:27017/creativeiq_prod?authSource=admin
MONGODB_DB=creativeiq_prod
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_MONGO_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_REDIS_PASSWORD

# AI Model Configuration
HF_TOKEN=your_huggingface_token_here
MODEL_NAME=llava-hf/llava-1.5-7b-hf
DEVICE=cuda  # Use 'cuda' for GPU, 'cpu' for CPU-only
MODEL_CACHE_DIR=/app/models

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.webp,.bmp

# Analysis Settings
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_TIMEOUT=60

# Performance Thresholds
COLOR_ANALYSIS_ACCURACY=0.94
TYPOGRAPHY_ACCURACY=0.91
LAYOUT_ACCURACY=0.89
BRAND_CONSISTENCY_ACCURACY=0.86

