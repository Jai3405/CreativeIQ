# CreativeIQ Environment Configuration

# API Settings
APP_NAME=CreativeIQ
VERSION=1.0.0
API_V1_STR=/api/v1

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=creativeiq
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=creativeiq
POSTGRES_PORT=5432

MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=creativeiq

REDIS_URL=redis://localhost:6379

# AI Model Configuration
HF_TOKEN=your_huggingface_token_here
MODEL_NAME=llava-hf/llava-1.5-7b-hf
DEVICE=cpu  # Use 'cuda' if GPU is available
MODEL_CACHE_DIR=./models

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Analysis Settings
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT=30

# Performance Thresholds
COLOR_ANALYSIS_ACCURACY=0.94
TYPOGRAPHY_ACCURACY=0.91
LAYOUT_ACCURACY=0.89
BRAND_CONSISTENCY_ACCURACY=0.86

# Security
SECRET_KEY=your_super_secret_key_here_change_in_production
ALLOWED_HOSTS=*

# Logging
LOG_LEVEL=INFO